{
  "name": "openmaqs-typescript",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for the OpenMAQS TypeScript test automation framework",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint .",
    "format": "prettier --write \"packages/*/src/**/*.ts\" \"packages/*/tests/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"packages/*/tests/**/*.ts\"",
    "docs": "typedoc --entryPointStrategy packages --entryPoints packages/*/src/index.ts --out docs",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typedoc": "^0.28.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.0"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
